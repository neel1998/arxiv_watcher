{
  "manifest_version": 2,
  "name": "Arxiv Watcher",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": { "16": "arxiv_watcher_logo_512.png", "48": "arxiv_watcher_logo_512.png" },
  "permissions": ["notifications", "storage", "tabs", "<all_urls>", "alarms"]
}